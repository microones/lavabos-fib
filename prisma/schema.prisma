generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// BETTER AUTH

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  name          String?
  emailVerified Boolean
  image         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  admin    Boolean @default(false)
  username String  @unique

  sessions Session[]
  accounts Account[]
}

model Session {
  id        String   @id @default(cuid())
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Account {
  id                    String    @id @default(cuid())
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
}

model Verification {
  id         String    @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime? @default(now())
  updatedAt  DateTime? @updatedAt
}

// DEFINICIÓ DE MODELS lavabos-fib

model Lavabo {
  id      Int    @id @default(autoincrement())
  edifici String
  planta  String
  genere  Genere @default(NEUTRE)

  // Relacions (Això no són columnes reals a la BD, són virtuals per a Prisma)
  imatges   Imatge[]
  frases    Frase[]
  ressenyes Ressenya[]

  createdAt DateTime @default(now()) // Es guarda sol quan crees
  updatedAt DateTime @default(now()) @updatedAt // Prisma l'actualitza sol quan edites
}

model Imatge {
  id  Int    @id @default(autoincrement())
  any Int
  url String // Necessites guardar on està la imatge (ex: path o URL de Cloudinary)

  // Clau forana cap a Lavabo
  lavaboId Int
  lavabo   Lavabo @relation(fields: [lavaboId], references: [id], onDelete: Cascade)

  // Relació cap a Frases (Una imatge pot contenir varies frases)
  frases Frase[]

  createdAt DateTime @default(now()) // Es guarda sol quan crees
  updatedAt DateTime @default(now()) @updatedAt // Prisma l'actualitza sol quan edites
}

model Frase {
  id        Int     @id @default(autoincrement())
  contingut String? // Pot ser null si només és un dibuix
  dibuix    Boolean @default(false)
  idioma    String? // Ho deixem com String simple. Si vols array, depèn del motor de BD (Postgres ho permet)

  // Relació: Pertany a un Lavabo (Obligatori)
  lavaboId Int
  lavabo   Lavabo @relation(fields: [lavaboId], references: [id], onDelete: Cascade)

  // Relació: Apareix en una Imatge (Opcional, potser no n'hi ha foto encara)
  imatgeId Int?
  imatge   Imatge? @relation(fields: [imatgeId], references: [id])

  // Relació: És resposta d'una altra frase (Self-relation)
  respostaId Int? // L'ID de la frase pare
  pare       Frase?  @relation("FilDeConversa", fields: [respostaId], references: [id]) // La frase original
  respostes  Frase[] @relation("FilDeConversa") // Les frases que responen a aquesta

  // Relacions externes
  comentaris Comentari[]

  createdAt DateTime @default(now()) // Es guarda sol quan crees
  updatedAt DateTime @default(now()) @updatedAt // Prisma l'actualitza sol quan edites
}

model Comentari {
  id        Int      @id @default(autoincrement())
  contingut String
  data      DateTime @default(now())

  fraseId Int
  frase   Frase @relation(fields: [fraseId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now()) // Es guarda sol quan crees
  updatedAt DateTime @default(now()) @updatedAt // Prisma l'actualitza sol quan edites
}

model Ressenya {
  id        Int      @id @default(autoincrement())
  contingut String
  puntuacio Int // validar en el backend que sigui de 1 a 5
  data      DateTime @default(now())

  lavaboId Int
  lavabo   Lavabo @relation(fields: [lavaboId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now()) // Es guarda sol quan crees
  updatedAt DateTime @default(now()) @updatedAt // Prisma l'actualitza sol quan edites
}

// ENUMS
enum Genere {
  MASCULI
  FEMENI
  NEUTRE
}
