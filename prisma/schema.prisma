generator client {
  provider = "prisma-client-js"
  output   = "../lib/prisma/client"
}

datasource db {
  provider = "sqlite"
}

enum Genere { 
  masculi
  femeni
  mixt 
}
enum Idioma {
  catala
  castella
  catala_i_castella
  angles
  frances
}

model Lavabo {
  id         Int         @id @default(autoincrement())
  edifici    String
  planta     String
  genere     Genere

  frases     Frase[]     
  ressenyes  Ressenya[]

  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
}

model Frase {
  id         Int          @id @default(autoincrement())
  contingut  String
  idioma     Idioma
  any        Int
  resposta   Int?
  fitxerImg  String?
  lavabo     Lavabo       @relation(fields: [lavaboId], references: [id])
  lavaboId   Int

  comentaris Comentari[]

  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
}

model Comentari {
  id         Int       @id @default(autoincrement())
  contingut  String
  frase      Frase     @relation(fields: [fraseId], references: [id])
  fraseId    Int
  data       DateTime  @default(now())
  autor      String?
  resposta   Int?

  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}

model Ressenya {
  id         Int       @id @default(autoincrement())
  autor      String?
  contingut  String
  puntuacio  Int
  data       DateTime  @default(now())
  lavabo     Lavabo    @relation(fields: [lavaboId], references: [id])
  lavaboId   Int
  
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}